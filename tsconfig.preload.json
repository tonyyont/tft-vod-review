{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist-electron",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["electron/preload.ts", "common/**/*.ts"]
}
