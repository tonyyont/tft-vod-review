{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "outDir": "./dist-electron",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["electron/**/*.ts", "common/**/*.ts"]
}
