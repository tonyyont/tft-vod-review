{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["electron/main.ts", "electron/database.ts", "electron/riot-api.ts", "electron/vod-scanner.ts"]
}
